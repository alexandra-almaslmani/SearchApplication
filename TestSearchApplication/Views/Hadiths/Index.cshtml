@model SearchViewModel

<!DOCTYPE html>
<html>
<head>
    <title>أحاديث</title>
</head>
<body>
    <h1 style="text-align:center;">أحاديث</h1>
    </br>
    <div class="cr-se">
        @using (Html.BeginForm("Index", "Hadiths", FormMethod.Get))
        {
            <b>البحث : </b>
            <div class="search-bar-with-button">
                @Html.TextBox("searchText", null, new { @class = "search-bar", placeholder = "ابحث هنا عن الحديث..." })
                <input type="submit" value="بحث" class="btn btn-success">
            </div>
        }
    </div>
    <br />
    @{
        int rowNo = 0;
    }
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>نص الحديث</th>
                <th>نسبة الشبه</th>
                <th>MNO</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Results.Count == 0)
            {
                <tr>
                    <td colspan="6" style="text-align:center;">فارغ</td>
                </tr>
            }
            else
            {
                foreach (var result in Model.Results)
                {

                    <tr>
                        <td>@(rowNo += 1)</td>
                        <td>@result.Text</td>
                        <td>@result.Accuracy</td>
                        <td>@result.MNO</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>